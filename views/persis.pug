extends layout

block content
  h1= title
  p Welcome to the persis pug
   div(class="container-fluid")
        div(class="row")
            -
                let persis = [
                    {
                        "Itemname": "Chicken Biryani",
                        "Quantity": 50,
                        "price": 90
                    },
                    {
                        "Itemname": "Chicken Tikka Masala",
                        "Quantity": 20,
                        "price": 79.99
                    },
                    {
                        "Itemname": "Apollo shrimps",
                        "Quantity": 30,
                        "price": 45.88
                    },                   
                ]
            each v,index in persis      
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased item ${intemNo + 1}`)
        }